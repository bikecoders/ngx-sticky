{
  "name": "ngx-sticky-demo",
  "version": "0.0.0",
  "scripts": {
    "release": "cd projects/sticky-directive && standard-version",
    "commit": "npx git-cz",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve:development-compilation": "npm run sticky:build && npm run build && npm run serve:compilation",
    "serve:production-compilation": "npm run sticky:build-prod && npm run build:prod && npm run serve:compilation",
    "serve:compilation": "angular-http-server -p 8080 --path './dist/browser/'",
    "deploy-gh-pages": "npm run build:prod -- --base-href 'https://bikecoders.github.io/ngx-sticky/' && angular-cli-ghpages --repo=https://GH_TOKEN@github.com/bikecoders/ngx-sticky.git --dir=dist/browser --branch=gh-pages --name='bikecoders' --email='bikecoders@gmail.com'",
    "sticky:build": "ng build sticky-directive",
    "sticky:build-prod": "ng build sticky-directive --prod",
    "sticky:publish": "npm run sticky:build-prod && npm run sticky:publish:copy-readme && npm run sticky:publish:copy-licence && cd dist/sticky-directive && npm publish",
    "sticky:publish:copy-licence": "copy LICENSE dist/sticky-directive",
    "sticky:publish:copy-readme": "copy README.md dist/sticky-directive",
    "sticky:publish:copy-files": "npm run sticky:publish:copy-licence && npm run sticky:publish:copy-readme",
    "sticky:lint": "ng lint sticky-directive",
    "sticky:lint:report": "npm --silent run sticky:lint -- --format json > reports/lint_issues.json",
    "sticky:test": "ng test sticky-directive",
    "sticky:test:coverage": "ng test sticky-directive -- --watch=false --code-coverage --browsers=ChromeHeadless",
    "sticky:test:sonar": "npm run sticky:lint:report && cross-env SONAR_QUBE=1 npm run sticky:test:coverage && sonar-scanner",
    "sticky:create-version": "cd projects/sticky-directive && mkdir -p .git && npm version",
    "sticky:create-version:patch": "npm run sticky:create-version -- patch",
    "sticky:create-version:minor": "npm run sticky:create-version -- minor",
    "sticky:create-version:major": "npm run sticky:create-version -- major",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:ssr": "node dist/server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:client-and-server-bundles": "ng build --prod && ng run ngx-sticky-demo:server:production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.1",
    "@angular/common": "~7.2.1",
    "@angular/compiler": "~7.2.1",
    "@angular/core": "~7.2.1",
    "@angular/forms": "~7.2.1",
    "@angular/http": "~7.2.1",
    "@angular/platform-browser": "~7.2.1",
    "@angular/platform-browser-dynamic": "~7.2.1",
    "@angular/platform-server": "~7.2.1",
    "@angular/router": "~7.2.1",
    "@nguniversal/express-engine": "~7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "~7.1.1",
    "core-js": "^2.6.2",
    "express": "^4.15.2",
    "intersection-observer": "^0.7.0",
    "ngx-semantic-version": "^1.2.1",
    "ngx-sticky-directive": "latest",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.28"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.2",
    "@angular-devkit/build-ng-packagr": "~0.12.2",
    "@angular/cli": "~7.2.2",
    "@angular/compiler-cli": "~7.2.1",
    "@angular/language-service": "~7.2.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jasmine": "~3.3.7",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^11.13.0",
    "angular-cli-ghpages": "^0.5.3",
    "angular-http-server": "^1.8.1",
    "codelyzer": "~4.5.0",
    "commitizen": "^4.0.3",
    "copy": "^0.3.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.2.5",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-sonarqube-unit-reporter": "^0.0.18",
    "ng-packagr": "^4.6.0",
    "protractor": "~5.4.0",
    "sonar-scanner": "^3.1.0",
    "standard-version": "^7.0.0",
    "ts-loader": "^5.2.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.12.1",
    "typescript": "~3.2.4",
    "webpack-cli": "^3.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
